@using BlogEntity.Concrete
@model List<Article>


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        En Son Paylaşılan Bloglar
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="blogtable" width="100%" cellspacing="0">

                <tr>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Tarih</th>
                    <th>Detaylar</th>

                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>@item.ArticleTitle</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.ArticleCreatedDate.ToShortDateString()</td>
                <td><a href="/Article/ArticleDetails/@item.ArticleId" class="btn btn-success">Detaylar</a></td>

            </tr>
                 }
            </table>
        </div>
    </div>
</div>