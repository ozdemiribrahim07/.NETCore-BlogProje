@model BlogUI.Areas.Admin.Models.UserSignInModel

@{ ViewData["Title"] = "UserLogin";
    Layout = "~/Areas/Admin/Views/Shared/LoginLayout.cshtml"; }

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Giriş</h3></div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Email"></label>
                            <input class="form-control py-4" asp-for="Email" type="text" placeholder="Mail Adresinizi Giriniz.." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Password">Password</label>
                            <input class="form-control py-4" asp-for="Password" type="password" placeholder="Şifre Giriniz.." />
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>

                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small">Şifremi Unuttum?</a>
                            <button class="btn btn-primary" type="submit"> Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <div class="small"><a href="/Admin/Account/UserRegister">Hesabınız Yok mu? Kayıt Ol</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
}


