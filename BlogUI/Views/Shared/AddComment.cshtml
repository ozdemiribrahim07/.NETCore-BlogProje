





<div class="comment-top">
    <h4>Yorum Yap</h4>
    <div class="comment-bottom">
        <form method="post" asp-action="AddComment" asp-controller="Comment" asp-area="">
            <input class="form-control" type="text" name="CommentUsername" placeholder="Adınız.." required="">
            <br />
            <input class="form-control" type="email" name="CommentMail" placeholder="Email Adresi.." required="">
            <br />

            <input class="form-control" type="text" name="CommentTitle" placeholder="Konu.." required="">
            <br />

            <textarea class="form-control" name="CommentContent" placeholder="Mesajınız.." required=""></textarea>
            <br />

            <button type="submit" class="btn btn-primary submit">Mesaj Gönder</button>
            <br />

        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
